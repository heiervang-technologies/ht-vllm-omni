ARG VLLM_BASE_IMAGE=vllm/vllm-openai
ARG VLLM_BASE_TAG=v0.16.0
FROM ${VLLM_BASE_IMAGE}:${VLLM_BASE_TAG}
ARG APP_DIR=/workspace/vllm-omni
WORKDIR ${APP_DIR}

COPY . .

# Install libsox-fmt-all (base has ffmpeg+sox but not all format plugins)
RUN apt-get update && \
    apt-get install -y --no-install-recommends libsox-fmt-all && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install vllm-omni
RUN uv pip install --system --no-cache-dir ".[dev]"

RUN ln -sf /usr/bin/python3 /usr/bin/python

ENTRYPOINT []
